<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.example</groupId>
    <artifactId>gwtPrj</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <dependencies>

    <!-- GWT Dependency -->
    <dependency>
        <groupId>com.google.gwt</groupId>
        <artifactId>gwt-user</artifactId>
        <version>2.9.0</version> <!-- 使用最新版本 -->
    </dependency>

    <dependency>
        <groupId>com.google.gwt</groupId>
        <artifactId>gwt-servlet</artifactId>
        <version>2.9.0</version> <!-- 使用最新版本 -->
        <scope>provided</scope>
    </dependency>
    </dependencies>

    <build>
        <plugins>


            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>gwt-maven-plugin</artifactId>
                <version>2.9.0</version> <!-- 使用与项目兼容的版本 -->
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                            <goal>run</goal>
                        </goals>
                        <!-- -->
                       <configuration>

                            <hostedWebapp>${project.basedir}/src/main/webapp</hostedWebapp>


                                <!--ss 必须指定一个有效的 runTarget -->
                                <runTarget>MyGwtModule.html</runTarget>
                        </configuration>

                        <!--
                        <configuration>
                            <compilerArguments>
                                <gwt.compiler.verbose>true</gwt.compiler.verbose>

                                <disableOptimizations>true</disableOptimizations>
                            </compilerArguments>
                        </configuration>
                        -->
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>11</source> <!-- 使用正确的 Java 版本 -->
                    <target>11</target> <!-- 使用正确的 Java 版本 -->
                    <!--
                                        <annotationProcessors>
                                            <annotationProcessor>lombok.launch.AnnotationProcessorHider$AnnotationProcessor</annotationProcessor>
                                        </annotationProcessors>

                                      -->
                    <fork>true</fork>
                    <compilerArgs>
                        <arg>--add-opens=java.base/jdk.internal.vm.annotation=ALL-UNNAMED</arg>
                        <arg>--add-opens=jdk.compiler/com.sun.tools.javac.processing=ALL-UNNAMED</arg>
                    </compilerArgs>
                </configuration>
            </plugin>
        </plugins>
    </build>


</project>